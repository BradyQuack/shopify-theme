{% comment %}
  Brand Spotlight Block
  Shows featured brands with logos, descriptions, and CTAs
{% endcomment %}

<div class="brand-spotlight-block" id="brand-spotlight-{{ section.id }}">
  {% if section.settings.heading != blank %}
    <div class="brand-spotlight__header">
      <h2 class="brand-spotlight__title">{{ section.settings.heading }}</h2>
      {% if section.settings.subheading != blank %}
        <p class="brand-spotlight__subtitle">{{ section.settings.subheading }}</p>
      {% endif %}
    </div>
  {% endif %}

  <div class="brand-spotlight__container">
    <div class="brand-spotlight__grid" data-columns="{{ section.settings.brands_per_row }}">
      {% for block in section.blocks %}
        {% case block.type %}
          {% when 'brand' %}
            <div class="brand-spotlight__item" {{ block.shopify_attributes }}>
              <div class="brand-card">
                {% if block.settings.brand_url != blank %}
                  <a href="{{ block.settings.brand_url }}" class="brand-card__link">
                {% endif %}
                
                {% if block.settings.brand_logo %}
                  <img 
                    src="{{ block.settings.brand_logo | image_url }}"
                    alt="{{ block.settings.brand_name | default: 'Brand logo' }}"
                    class="brand-card__image"
                  >
                {% else %}
                  <div class="brand-card__placeholder">
                    <div class="placeholder-icon">ðŸ“·</div>
                    <span>No Image</span>
                  </div>
                {% endif %}
                
                {% if block.settings.brand_url != blank %}
                  </a>
                {% endif %}

                {% if block.settings.featured_badge %}
                  <div class="brand-card__badge">
                    <span class="brand-badge">Featured</span>
                  </div>
                {% endif %}
              </div>
            </div>
        {% endcase %}
      {% endfor %}
    </div>

    {% if section.settings.view_all_url != blank and section.settings.view_all_text != blank %}
      <div class="brand-spotlight__footer">
        <a href="{{ section.settings.view_all_url }}" class="brand-spotlight__view-all btn btn--secondary">
          {{ section.settings.view_all_text }}
        </a>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .brand-spotlight-block {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  .brand-spotlight__header {
    text-align: {{ section.settings.text_alignment }};
    margin-bottom: 2rem;
  }

  .brand-spotlight__title {
    font-size: {{ section.settings.heading_size }}px;
    color: {{ section.settings.heading_color }};
    margin: 0 0 0.5rem;
    font-weight: 600;
  }

  .brand-spotlight__subtitle {
    font-size: 1.125rem;
    color: {{ section.settings.text_color }};
    margin: 0;
    opacity: 0.8;
  }

  .brand-spotlight__container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .brand-spotlight__grid {
    display: grid;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .brand-spotlight__grid[data-columns="2"] {
    grid-template-columns: repeat(2, 1fr);
  }

  .brand-spotlight__grid[data-columns="3"] {
    grid-template-columns: repeat(3, 1fr);
  }

  .brand-spotlight__grid[data-columns="4"] {
    grid-template-columns: repeat(4, 1fr);
  }

  .brand-spotlight__grid[data-columns="5"] {
    grid-template-columns: repeat(5, 1fr);
  }

  .brand-spotlight__grid[data-columns="6"] {
    grid-template-columns: repeat(6, 1fr);
  }

  .brand-spotlight__grid[data-columns="7"] {
    grid-template-columns: repeat(7, 1fr);
  }

  .brand-spotlight__grid[data-columns="8"] {
    grid-template-columns: repeat(8, 1fr);
  }

  @media (max-width: 1200px) {
    .brand-spotlight__grid[data-columns="8"] {
      grid-template-columns: repeat(6, 1fr);
    }
    .brand-spotlight__grid[data-columns="7"] {
      grid-template-columns: repeat(6, 1fr);
    }
  }

  @media (max-width: 1024px) {
    .brand-spotlight__grid[data-columns="6"],
    .brand-spotlight__grid[data-columns="7"],
    .brand-spotlight__grid[data-columns="8"] {
      grid-template-columns: repeat(5, 1fr);
    }
    .brand-spotlight__grid[data-columns="5"] {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media (max-width: 768px) {
    .brand-spotlight__grid[data-columns="4"],
    .brand-spotlight__grid[data-columns="5"],
    .brand-spotlight__grid[data-columns="6"],
    .brand-spotlight__grid[data-columns="7"],
    .brand-spotlight__grid[data-columns="8"] {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  @media (max-width: 600px) {
    .brand-spotlight__grid[data-columns="3"],
    .brand-spotlight__grid[data-columns="4"],
    .brand-spotlight__grid[data-columns="5"],
    .brand-spotlight__grid[data-columns="6"],
    .brand-spotlight__grid[data-columns="7"],
    .brand-spotlight__grid[data-columns="8"] {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 400px) {
    .brand-spotlight__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
    }
  }

  .brand-card {
    position: relative;
    background: {{ section.settings.card_background }};
    border-radius: {{ section.settings.card_border_radius }}px;
    border: 1px solid {{ section.settings.card_border_color }};
    overflow: hidden;
    transition: all 0.3s ease;
    width: 100%;
    aspect-ratio: 1 / 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  .brand-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 25px rgba(0,0,0,0.15);
  }

  .brand-card__link {
    display: block;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .brand-card__image {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
    transition: transform 0.3s ease;
    display: block;
  }

  .brand-card:hover .brand-card__image {
    transform: scale(1.05);
  }

  .brand-card__placeholder {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: {{ section.settings.text_color }};
    opacity: 0.5;
    text-align: center;
    gap: 0.5rem;
    width: 100%;
    height: 100%;
  }

  .placeholder-icon {
    font-size: 2rem;
  }

  .brand-card__placeholder span {
    font-size: 0.875rem;
    font-weight: 500;
  }

  .brand-card__badge {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
  }

  .brand-badge {
    background: {{ section.settings.badge_background }};
    color: {{ section.settings.badge_text_color }};
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .brand-spotlight__footer {
    text-align: center;
    margin-top: 2rem;
  }

  .btn {
    display: inline-block;
    padding: 0.75rem 1.5rem;
    background: {{ section.settings.button_background }};
    color: {{ section.settings.button_text_color }};
    text-decoration: none;
    border-radius: 4px;
    font-weight: 500;
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .btn:hover {
    background: {{ section.settings.button_hover_background }};
    transform: translateY(-1px);
  }

  .btn--secondary {
    background: transparent;
    color: {{ section.settings.heading_color }};
    border: 2px solid {{ section.settings.heading_color }};
  }

  .btn--secondary:hover {
    background: {{ section.settings.heading_color }};
    color: {{ section.settings.background_color }};
  }

  @media (max-width: 768px) {
    .brand-spotlight__title {
      font-size: 2rem;
    }

    .brand-card {
      padding: 0.75rem;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Add loading animation for brand logos
    const brandImages = document.querySelectorAll('#brand-spotlight-{{ section.id }} .brand-card__image');
    
    brandImages.forEach(function(img) {
      img.addEventListener('load', function() {
        this.style.opacity = '1';
      });
      
      // Set initial opacity
      img.style.opacity = '0';
      img.style.transition = 'opacity 0.3s ease';
    });

    // Add intersection observer for scroll animations
    if ('IntersectionObserver' in window) {
      const observer = new IntersectionObserver(function(entries) {
        entries.forEach(function(entry) {
          if (entry.isIntersecting) {
            entry.target.style.animationDelay = Math.random() * 0.3 + 's';
            entry.target.classList.add('animate-in');
          }
        });
      }, {
        threshold: 0.1
      });

      const brandCards = document.querySelectorAll('#brand-spotlight-{{ section.id }} .brand-card');
      brandCards.forEach(function(card) {
        observer.observe(card);
      });
    }
  });
</script>

