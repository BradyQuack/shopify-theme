{% comment %}
  Product Highlights Section
  Displays three columns of product deals with customizable titles
{% endcomment %}

<style>
  .product-grid {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  .product-grid__container {
    max-width: {{ section.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .product-grid__grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 24px;
  }

  .product-grid__column {
    background: var(--color-card-bg, white);
    border: 1px solid var(--color-border, #e5e5e5);
    border-radius: 8px;
    padding: 24px;
  }

  .product-grid__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 24px;
    padding-bottom: 16px;
    border-bottom: 1px solid var(--color-border, #e5e5e5);
  }

  .product-grid__title {
    font-size: 20px;
    font-weight: 600;
    color: var(--color-text-primary, #000);
    margin: 0;
  }

  .product-grid__view-all {
    color: var(--color-link, #0066c0);
    text-decoration: none;
    font-size: 14px;
    font-weight: 500;
  }

  .product-grid__view-all:hover {
    text-decoration: underline;
  }

  .product-grid__items {
    display: grid;
    gap: 20px;
  }

  .product-grid__items--grid {
    grid-template-columns: repeat(2, 1fr);
    gap: 16px;
  }

  .product-card {
    display: flex;
    gap: 16px;
    padding: 12px;
    border-radius: 6px;
    transition: background-color 0.2s;
    text-decoration: none;
    color: inherit;
  }

  .product-card--grid {
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
  }

  .product-card:hover {
    background-color: var(--color-surface-alt, #f7f7f7);
  }

  .product-card__image-wrapper {
    position: relative;
    flex-shrink: 0;
    width: 120px;
    height: 120px;
  }

  .product-card--grid .product-card__image-wrapper {
    width: 100%;
    height: 150px;
  }

  .product-card__badge {
    position: absolute;
    top: 0;
    left: 0;
    background-color: var(--color-success, #00703c);
    color: var(--color-button-text, white);
    padding: 3px 8px;
    border-radius: 0 0 4px 0;
    font-size: 11px;
    font-weight: 600;
  }

  .product-card__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    background-color: var(--color-surface-alt, #f5f5f5);
    border-radius: 4px;
  }

  .product-card__info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .product-card__name {
    font-size: 14px;
    line-height: 1.4;
    color: var(--color-link, #0066c0);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .product-card--grid .product-card__name {
    min-height: 40px;
  }

  .product-card__price {
    font-size: 18px;
    font-weight: 700;
    color: var(--color-text-primary, #000);
    display: block;
  }

  .product-card__compare-price {
    font-size: 14px;
    color: var(--color-compare-price, #565959);
    text-decoration: line-through;
    display: block;
    margin-top: 2px;
  }

  .product-card__rating {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 13px;
  }

  .product-card__stars {
    color: var(--color-star-filled, #ffa724);
  }

  .product-card__reviews {
    color: var(--color-link, #0066c0);
  }



  @media (max-width: 768px) {
    .product-grid__grid {
      grid-template-columns: 1fr;
    }

    .product-grid__column--mobile-hidden {
      display: none;
    }

    .product-grid__items--grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .product-card {
      flex-direction: column;
      align-items: flex-start;
      text-align: left;
    }

    .product-card__image-wrapper {
      width: 200px;
      height: 200px;
    }

    .product-card--grid .product-card__image-wrapper {
      width: 100%;
      height: 140px;
    }
  }
</style>

<div class="product-grid">
  <div class="product-grid__container">
    <div class="product-grid__grid">
      
      {% comment %} Column 1 {% endcomment %}
      {% if section.blocks.size > 0 %}
      <div class="product-grid__column {% unless section.settings.show_column1_mobile %}product-grid__column--mobile-hidden{% endunless %}">
        <div class="product-grid__header">
          <h2 class="product-grid__title">{{ section.settings.column1_title }}</h2>
          {% if section.settings.column1_link != blank %}
            <a href="{{ section.settings.column1_link }}" class="product-grid__view-all">
              {{ section.settings.view_all_text }}
            </a>
          {% endif %}
        </div>
        <div class="product-grid__items product-grid__items--grid">
          {% for block in section.blocks %}
            {% if block.settings.column == 'column1' and block.settings.product != blank %}
              {% assign product = block.settings.product %}
              {% assign savings_percentage = 0 %}
              {% if product.compare_at_price > product.price %}
                {% assign savings = product.compare_at_price | minus: product.price %}
                {% assign savings_percentage = savings | times: 100.0 | divided_by: product.compare_at_price | round %}
              {% endif %}
              <a href="{{ product.url }}" class="product-card product-card--grid" {{ block.shopify_attributes }}>
                <div class="product-card__image-wrapper">
                  {% if block.settings.show_badge and savings_percentage > 0 %}
                    <span class="product-card__badge">Save {{ savings_percentage }}%</span>
                  {% endif %}
                  {% if product.featured_image %}
                    <img src="{{ product.featured_image | image_url: width: 240 }}" 
                         alt="{{ product.featured_image.alt | escape }}"
                         class="product-card__image"
                         loading="lazy">
                  {% else %}
                    {{ 'product-1' | placeholder_svg_tag: 'product-card__image' }}
                  {% endif %}
                </div>
                <div class="product-card__info">
                  <div class="product-card__name">{{ product.title }}</div>
                  <div>
                    <span class="product-card__price">{{ product.price | money }}</span>
                    {% if product.compare_at_price > product.price %}
                      <span class="product-card__compare-price">{{ product.compare_at_price | money }}</span>
                    {% endif %}
                  </div>
                  {% if block.settings.show_rating %}
                    <div class="product-card__rating">
                      <span class="product-card__stars">★★★★☆</span>
                      <span class="product-card__reviews">{{ block.settings.review_count }}</span>
                    </div>
                  {% endif %}
                </div>
              </a>
            {% endif %}
          {% endfor %}
        </div>
      </div>
      {% endif %}

