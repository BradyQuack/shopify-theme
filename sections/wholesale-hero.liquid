{% comment %}
  Section: wholesale-hero.liquid
  Purpose: Hero section for wholesale page with heading, subheading, and CTA buttons
  Used on: Wholesale page (page.wholesale.json)
  Features: Rich text blocks, customizable positioning, color scheme support
{% endcomment %}

{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    font-family: inherit; /* Ensure consistency with theme fonts */
  }
  
  .button--with-arrow {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem; /* spacing between text and icon */
  }

  .button--with-arrow .button__icon {
    display: inline-block;
    width: 1em;
    height: 1em;
    line-height: 0;
  }
  
  .wholesale-heading {
    font-family: var(--font-heading-family, inherit); /* Use theme's heading font */
    font-size: 36px; /* default for desktop */
  }

  /* Force smaller heading on mobile for THIS section only */
  @media screen and (max-width: 749px) {
    .section-{{ section.id }}-padding .rich-text__heading,
    .section-{{ section.id }}-padding .rich-text__heading.h0,
    .section-{{ section.id }}-padding .rich-text__heading.h1,
    .section-{{ section.id }}-padding .rich-text__heading.hxl,
    .section-{{ section.id }}-padding .rich-text__heading.hxxl {
      font-size: 22px !important;   /* <- pick your size */
      line-height: 1.2 !important;
    }
  }

  .button--with-arrow .button__icon svg {
    display: block;
    width: 1em;
    height: 1em;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Three Features Block Styles */
  .three-features {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin: 2rem 0;
    font-family: inherit; /* Inherit theme fonts */
  }

  @media screen and (min-width: 750px) {
    .three-features {
      flex-direction: row;
      justify-content: space-between;
      align-items: flex-start;
      gap: 2rem;
    }
  }

  .three-features__feature {
    flex: 1;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
  }

  .three-features__text1 {
    font-family: var(--font-heading-family, inherit); /* Use theme's heading font for emphasis */
    font-weight: 600;
    font-size: 1.1rem;
    margin: 0;
  }

  .three-features__text2 {
    font-family: var(--font-body-family, inherit); /* Use theme's body font */
    font-size: 0.95rem;
    line-height: 1.4;
    margin: 0;
  }

  @media screen and (min-width: 750px) {
    .three-features__text1 {
      font-size: 1.2rem;
    }

    .three-features__text2 {
      font-size: 1rem;
    }
  }

  /* Ensure all elements inherit theme typography */
  .section-{{ section.id }}-padding * {
    font-family: inherit;
  }

  /* Override for specific elements that should use theme font variables */
  .section-{{ section.id }}-padding .rich-text__heading {
    font-family: var(--font-heading-family, inherit);
  }

  .section-{{ section.id }}-padding .rich-text__text,
  .section-{{ section.id }}-padding .rich-text__caption {
    font-family: var(--font-body-family, inherit);
  }

  .section-{{ section.id }}-padding .button {
    font-family: var(--font-body-family, inherit);
  }
{%- endstyle -%}

<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  <div class="rich-text content-container color-{{ section.settings.color_scheme }} gradient{% if section.settings.full_width %} rich-text--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding">
    <div class="rich-text__wrapper rich-text__wrapper--{{ section.settings.desktop_content_position }}{% if section.settings.full_width %} page-width{% endif %}">
      <div class="rich-text__blocks {{ section.settings.content_alignment }}">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              <h2
                class="rich-text__heading rte inline-richtext {{ block.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};{% if block.settings.heading_color != blank %} color: {{ block.settings.heading_color }};{% endif %}"
                {% else %}
                  {% if block.settings.heading_color != blank %}style="color: {{ block.settings.heading_color }};"{% endif %}
                {% endif %}
              >
                {{ block.settings.heading }}
              </h2>
            {%- when 'caption' -%}
              <p
                class="rich-text__caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};"
                {% endif %}
              >
                {{ block.settings.caption | escape }}
              </p>
            {%- when 'text' -%}
              <div
                class="rich-text__text rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};"
                {% endif %}
              >
                {{ block.settings.text }}
              </div>
            {%- when 'button' -%}
              <div
                class="rich-text__buttons{% if block.settings.button_label != blank and block.settings.button_label_2 != blank %} rich-text__buttons--multiple{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};"
                {% endif %}
              >
                {%- if block.settings.button_label != blank -%}
                  <a
                    {% if block.settings.button_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %} button--with-arrow"
                  >
                    {{- block.settings.button_label | escape -}}
                    <span class="button__icon" aria-hidden="true">
                      {{ 'icon-arrow.svg' | inline_asset_content }}
                    </span>
                  </a>
                {%- endif -%}

                {%- if block.settings.button_label_2 != blank -%}
                  <a
                    {% if block.settings.button_link_2 == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link_2 }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}"
                  >
                    {{- block.settings.button_label_2 | escape -}}
                  </a>
                {%- endif -%}
              </div>
            {%- when 'three_features' -%}
              <div
                class="three-features{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                {{ block.shopify_attributes }}
                {% if settings.animations_reveal_on_scroll %}
                  data-cascade
                  style="--animation-order: {{ forloop.index }};"
                {% endif %}
              >
                {%- if block.settings.feature1_text1 != blank or block.settings.feature1_text2 != blank -%}
                  <div class="three-features__feature">
                    {%- if block.settings.feature1_text1 != blank -%}
                      <div 
                        class="three-features__text1"
                        {% if block.settings.feature1_color != blank %}
                          style="color: {{ block.settings.feature1_color }};"
                        {% endif %}
                      >
                        {{ block.settings.feature1_text1 | escape }}
                      </div>
                    {%- endif -%}
                    {%- if block.settings.feature1_text2 != blank -%}
                      <div class="three-features__text2">
                        {{ block.settings.feature1_text2 | escape }}
                      </div>
                    {%- endif -%}
                  </div>
                {%- endif -%}

                {%- if block.settings.feature2_text1 != blank or block.settings.feature2_text2 != blank -%}
                  <div class="three-features__feature">
                    {%- if block.settings.feature2_text1 != blank -%}
                      <div 
                        class="three-features__text1"
                        {% if block.settings.feature2_color != blank %}
                          style="color: {{ block.settings.feature2_color }};"
                        {% endif %}
                      >
                        {{ block.settings.feature2_text1 | escape }}
                      </div>
                    {%- endif -%}
                    {%- if block.settings.feature2_text2 != blank -%}
                      <div class="three-features__text2">
                        {{ block.settings.feature2_text2 | escape }}
                      </div>
                    {%- endif -%}
                  </div>
                {%- endif -%}

                {%- if block.settings.feature3_text1 != blank or block.settings.feature3_text2 != blank -%}
                  <div class="three-features__feature">
                    {%- if block.settings.feature3_text1 != blank -%}
                      <div 
                        class="three-features__text1"
                        {% if block.settings.feature3_color != blank %}
                          style="color: {{ block.settings.feature3_color }};"
                        {% endif %}
                      >
                        {{ block.settings.feature3_text1 | escape }}
                      </div>
                    {%- endif -%}
                    {%- if block.settings.feature3_text2 != blank -%}
                      <div class="three-features__text2">
                        {{ block.settings.feature3_text2 | escape }}
                      </div>
                    {%- endif -%}
                  </div>
                {%- endif -%}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

