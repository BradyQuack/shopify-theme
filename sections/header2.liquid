<div class="header2-section">
  <!-- Top Promotional Bar -->
  {%- if section.settings.show_promo_bar -%}
    <div class="promo-bar">
      <div class="promo-bar__content">
        <div class="promo-bar__message">
          {%- if section.settings.promo_link != blank -%}
            <a href="{{ section.settings.promo_link }}" class="promo-bar__message-link">
              {{ section.settings.promo_message | default: "Special offer! Free shipping on orders over $45. Shop Now >" }}
            </a>
          {%- else -%}
            {{ section.settings.promo_message | default: "Special offer! Free shipping on orders over $45. Shop Now >" }}
          {%- endif -%}
        </div>
        <div class="promo-bar__links">
          {%- for block in section.blocks -%}
            {%- if block.type == 'promo_link' -%}
              <a href="{{ block.settings.link }}">{{ block.settings.text }}</a>
            {%- endif -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  {%- endif -%}

  <!-- Mobile Menu Overlay -->
  <div class="header2__mobile-overlay" id="mobile-overlay">
    <div class="header2__mobile-menu" id="mobile-menu">
      <div class="header2__mobile-menu-header">
        <h3>Menu</h3>
        <button class="header2__mobile-close" id="mobile-close">&times;</button>
      </div>
      <ul class="header2__mobile-nav-list">
        <!-- Shop All -->
        <li class="header2__mobile-nav-item">
          <a href="{{ section.settings.shop_all_link | default: '/collections' }}" class="header2__mobile-nav-link header2__mobile-nav-link--shop-all">
            {{ section.settings.shop_all_text | default: 'Shop All' }}
          </a>
        </li>
        <!-- All Products -->
        {%- if section.settings.show_all_products_link -%}
          <li class="header2__mobile-nav-item">
            <a href="{{ section.settings.all_products_link | default: '/collections/all' }}" class="header2__mobile-nav-link">
              {{ section.settings.all_products_text | default: 'All Products' }}
            </a>
          </li>
        {%- endif -%}
        <!-- Navigation Links -->
        {%- for block in section.blocks -%}
          {%- if block.type == 'nav_item' -%}
            <li class="header2__mobile-nav-item">
              <a href="{{ block.settings.link }}" class="header2__mobile-nav-link">
                {{ block.settings.text }}
              </a>
            </li>
          {%- endif -%}
        {%- endfor -%}
      </ul>
    </div>
  </div>

  <!-- Main Header -->
  <div class="header2">
    <div class="header2__main">
      <!-- Mobile Menu Button -->
      <button class="header2__mobile-menu-button" id="mobile-menu-button">
        <svg class="header2__mobile-menu-icon" fill="currentColor" viewBox="0 0 24 24">
          <path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"/>
        </svg>
      </button>

      <!-- Logo -->
      <div class="header2__logo">
        <a href="{{ routes.root_url }}">
          {%- if settings.logo -%}
            {{ settings.logo | image_url: width: 200 | image_tag: alt: shop.name }}
          {%- else -%}
            <h1>{{ shop.name }}</h1>
          {%- endif -%}
        </a>
      </div>

      <!-- Store Info -->
      <div class="header2__store-info">
