<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Mobile Menu Functionality
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileOverlay = document.getElementById('mobile-overlay');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileClose = document.getElementById('mobile-close');

    function openMobileMenu() {
      mobileOverlay.classList.add('active');
      mobileMenu.classList.add('active');
      document.body.style.overflow = 'hidden';
    }

    function closeMobileMenu() {
      mobileOverlay.classList.remove('active');
      mobileMenu.classList.remove('active');
      document.body.style.overflow = '';
    }

    if (mobileMenuButton) {
      mobileMenuButton.addEventListener('click', openMobileMenu);
    }

    if (mobileClose) {
      mobileClose.addEventListener('click', closeMobileMenu);
    }

    if (mobileOverlay) {
      mobileOverlay.addEventListener('click', function(e) {
        if (e.target === mobileOverlay) {
          closeMobileMenu();
        }
      });
    }

    // Close mobile menu on escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && mobileOverlay.classList.contains('active')) {
        closeMobileMenu();
      }
    });

    // Handle window resize
    window.addEventListener('resize', function() {
      if (window.innerWidth > 768 && mobileOverlay.classList.contains('active')) {
        closeMobileMenu();
      }
    });

    // Predictive Search Functionality
    const searchInput = document.getElementById('header-search-input');
    const searchResults = document.getElementById('header-search-results');
    let searchTimeout;

    function displaySearchResults(products) {
      if (products.length === 0) {
        searchResults.innerHTML = '<div class="header2__search-no-results">No products found</div>';
        return;
      }

      searchResults.innerHTML = products.map(product => {
        return `
          <a href="${product.url}" class="header2__search-item">
            <img src="${product.image}" alt="${product.title}" class="header2__search-item-image" />
            <div class="header2__search-item-info">
              <div class="header2__search-item-title">${product.title}</div>
            </div>
          </a>
        `;
      }).join('');
    }

    function performSearch(query) {
      if (!query || query.length < 2) {
        searchResults.classList.remove('active');
        return;
      }

      searchResults.innerHTML = '<div class="header2__search-loading">Searching...</div>';
      searchResults.classList.add('active');

      fetch(`/search/suggest.json?q=${encodeURIComponent(query)}&resources[type]=product&resources[limit]=8`)
        .then(response => response.json())
        .then(data => {
          const products = data.resources.results.products || [];
          displaySearchResults(products);
        })
        .catch(error => {
          console.error('Search error:', error);
          searchResults.innerHTML = '<div class="header2__search-no-results">Search error. Please try again.</div>';
        });
    }

    if (searchInput) {
      searchInput.addEventListener('input', function(e) {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
          performSearch(e.target.value);
        }, 300);
      });

      searchInput.addEventListener('focus', function(e) {
        if (e.target.value.length >= 2) {
          performSearch(e.target.value);
        }
      });

      // Close results when clicking outside
      document.addEventListener('click', function(e) {
        if (!e.target.closest('.header2__search')) {
          searchResults.classList.remove('active');
        }
      });

      // Close results on escape key
      searchInput.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
          searchResults.classList.remove('active');
        }
      });
    }

    // === FIX: Force icon colors based on theme (JS override since CSS isn't working) ===
    function updateHeaderIconColors() {
      const theme = document.documentElement.getAttribute('data-theme');
      const iconPaths = document.querySelectorAll('.header2__actions svg path');
      const lightColor = '#f1f5f9'; // Light color for dark mode
      const darkColor = '#333333';  // Dark color for light mode

      iconPaths.forEach(path => {
        // Remove the currentColor attribute and set explicit fill
        path.removeAttribute('fill');
        path.style.fill = (theme === 'dark') ? lightColor : darkColor;
      });

      console.log('[Header2] Updated ' + iconPaths.length + ' icon paths for theme: ' + theme);
    }

    // Run on load
    updateHeaderIconColors();

    // Watch for theme changes on <html> element
    const themeObserver = new MutationObserver((mutations) => {
      mutations.forEach((mutation) => {
        if (mutation.attributeName === 'data-theme') {
          updateHeaderIconColors();
        }
      });
    });
    themeObserver.observe(document.documentElement, { attributes: true });

    // === DEBUG: Expose icon debug info to window for external debug tools ===
    window.getIconDebug = function() {
      const theme = document.documentElement.getAttribute('data-theme');
      const signinPath = document.querySelector('.header2__signin-icon svg path');
      const cartPath = document.querySelector('.header2__cart-icon svg path');
      const action = document.querySelector('.header2__action');

      return {
        theme: theme,
        icon_paths_found: document.querySelectorAll('.header2__actions svg path').length,
        action: action ? {
          computed_color: getComputedStyle(action).color,
          computed_fill: getComputedStyle(action).fill
        } : 'NOT_FOUND',
        signin_path: signinPath ? {
          computed_fill: getComputedStyle(signinPath).fill,
          style_fill: signinPath.style.fill,
          attr_fill: signinPath.getAttribute('fill')
        } : 'NOT_FOUND',
        cart_path: cartPath ? {
          computed_fill: getComputedStyle(cartPath).fill,
          style_fill: cartPath.style.fill,
          attr_fill: cartPath.getAttribute('fill')
        } : 'NOT_FOUND'
      };
    };
  });
</script>

