    width: {{ section.settings.cart_icon_size }}px !important;
    height: {{ section.settings.cart_icon_size }}px !important;
  }
  
  .header2__signin-wrapper {
    width: {{ section.settings.signin_icon_size }}px;
    height: {{ section.settings.signin_icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 4px;
  }
  
  .header2__cart-wrapper {
    width: {{ section.settings.cart_icon_size }}px;
