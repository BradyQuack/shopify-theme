<script>
  (function() {
    function updateDebug() {
      var mainContainer = document.querySelector('.video-hero-{{ section.id }}');
      var videoContainer = document.querySelector('.video-hero-{{ section.id }} .video-hero__container');
      var contentWrapper = document.querySelector('.video-hero-{{ section.id }} .video-hero__content-wrapper');
      var content = document.querySelector('.video-hero-{{ section.id }} .video-hero__content');
      var contentInner = document.querySelector('.video-hero-{{ section.id }} .video-hero__content-inner');
      
      if (mainContainer) {
        var style = window.getComputedStyle(mainContainer);
        document.getElementById('main-bg-{{ section.id }}').textContent = style.backgroundColor;
        document.getElementById('main-classes-{{ section.id }}').textContent = mainContainer.className;
      }
      
      if (videoContainer) {
        var style = window.getComputedStyle(videoContainer);
        document.getElementById('video-container-bg-{{ section.id }}').textContent = style.backgroundColor;
      }
      
      if (contentWrapper) {
        var style = window.getComputedStyle(contentWrapper);
        document.getElementById('content-wrapper-bg-{{ section.id }}').textContent = style.backgroundColor;
      }
      
      if (content) {
        var style = window.getComputedStyle(content);
        document.getElementById('content-bg-{{ section.id }}').textContent = style.backgroundColor;
      }
      
      if (contentInner) {
        var style = window.getComputedStyle(contentInner);
        document.getElementById('content-inner-bg-{{ section.id }}').textContent = style.backgroundColor;
        document.getElementById('content-inner-opacity-{{ section.id }}').textContent = style.opacity;
        document.getElementById('inner-classes-{{ section.id }}').textContent = contentInner.className || 'none';
        document.getElementById('inner-inline-{{ section.id }}').textContent = contentInner.getAttribute('style') || 'none';
      }
    }
    
    setTimeout(updateDebug, 100);
    setTimeout(updateDebug, 500);
    setTimeout(updateDebug, 1000);
  })();
</script>
<!-- END DEBUG -->

<style>
  .video-hero__container {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .video-hero__media-wrapper {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .video-hero__media,
  .video-hero__placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .video-hero__video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    z-index: 1;
  }

  .video-hero__overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 2;
  }

  .video-hero__placeholder {
    background-color: #f3f3f3;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .video-hero__content-wrapper {
    position: relative;
    z-index: 2;
    display: flex;
    height: 100%;
  }

  /* Desktop content positioning */
  .video-hero__content-wrapper--top-left { align-items: flex-start; justify-content: flex-start; }
  .video-hero__content-wrapper--top-center { align-items: flex-start; justify-content: center; }
  .video-hero__content-wrapper--top-right { align-items: flex-start; justify-content: flex-end; }
  .video-hero__content-wrapper--middle-left { align-items: center; justify-content: flex-start; }
  .video-hero__content-wrapper--middle-center { align-items: center; justify-content: center; }
  .video-hero__content-wrapper--middle-right { align-items: center; justify-content: flex-end; }
  .video-hero__content-wrapper--bottom-left { align-items: flex-end; justify-content: flex-start; }
  .video-hero__content-wrapper--bottom-center { align-items: flex-end; justify-content: center; }
  .video-hero__content-wrapper--bottom-right { align-items: flex-end; justify-content: flex-end; }

  /* Content alignment */
  .video-hero--content-align-left .video-hero__content-inner { text-align: left; }
  .video-hero--content-align-center .video-hero__content-inner { text-align: center; }
  .video-hero--content-align-right .video-hero__content-inner { text-align: right; }

  @media screen and (max-width: 749px) {
    .video-hero--content-align-mobile-left .video-hero__content-inner { text-align: left; }
    .video-hero--content-align-mobile-center .video-hero__content-inner { text-align: center; }
    .video-hero--content-align-mobile-right .video-hero__content-inner { text-align: right; }
    
    .video-hero--mobile-bottom .video-hero__content-wrapper {
      position: relative;
      height: auto;
      margin-top: 1rem;
    }
  }

  .video-hero__content {
    text-align: center;
    color: #fff;
  }

  .video-hero__content-inner {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .video-hero__heading {
    margin-bottom: 1.5rem;
    color: inherit;
  }

  .video-hero__text {
    margin-bottom: 2rem;
    color: inherit;
  }

  .video-hero__button-wrapper {
    margin-top: 2rem;
  }

  @media screen and (min-width: 750px) {
    .video-hero__content-inner {
      padding: 0 3rem;
    }
  }

  /* Mobile optimizations */
  @media screen and (max-width: 749px) {
    .video-hero__video {
      object-position: center center;
    }

    .video-hero__heading {
      font-size: calc(var(--font-heading-scale) * 2.8rem);
    }
  }
</style>

