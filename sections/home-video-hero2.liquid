{%- style -%}
  .video-hero-{{ section.id }} .video-hero__overlay {
    background-color: {{ section.settings.overlay_color }};
    opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    display: block !important;
    position: absolute !important;
    top: 0 !important;
    left: 0 !important;
    right: 0 !important;
    bottom: 0 !important;
    width: 100% !important;
    height: 100% !important;
    z-index: 2 !important;
    pointer-events: none !important;
  }

  .video-hero-{{ section.id }} .video-hero__container {
    height: {{ section.settings.mobile_height }}vh;
  }

  @media screen and (min-width: 750px) {
    .video-hero-{{ section.id }} .video-hero__container {
      height: {{ section.settings.desktop_height }}vh;
    }
  }

  .video-hero-{{ section.id }} .video-hero__content-wrapper {
    height: 100%;
    padding: 2rem 0;
  }

  @media screen and (min-width: 750px) {
    .video-hero-{{ section.id }} .video-hero__content-wrapper {
      padding: 4rem 0;
    }
  }
{%- endstyle -%}

<div class="video-hero video-hero-{{ section.id }} gradient color-{{ section.settings.color_scheme }}">

  <div class="video-hero__container">
    <div class="video-hero__media-wrapper">
      {%- if section.settings.video != blank -%}
        <div class="video-hero__media">
          {{
            section.settings.video
            | video_tag:
              image_size: '1920x',
              autoplay: true,
              loop: true,
              muted: true,
              playsinline: true,
              controls: false,
              class: 'video-hero__video'
          }}
        </div>
        <div class="video-hero__overlay"></div>
      {%- else -%}
        <div class="video-hero__placeholder">
          {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
        <div class="video-hero__overlay"></div>
      {%- endif -%}
    </div>

    <div class="video-hero__content-wrapper">
      <div class="video-hero__content page-width">
        <div class="video-hero__content-inner content-container content-container--full-width-mobile">
          {%- for block in section.blocks -%}
            {% case block.type %}
              {%- when 'subheading' -%}
                <p
                  class="video-hero__subheading"
                  style="
                    color: {{ block.settings.subheading_color }};
                    letter-spacing: {{ block.settings.subheading_letter_spacing }}px;
                    font-weight: {{ block.settings.subheading_font_weight }};
                    text-transform: {{ block.settings.subheading_text_transform }};
                    margin-bottom: {{ block.settings.subheading_margin_bottom }}px;
                    font-size: {% if block.settings.subheading_size == 'small' %}0.875rem{% elsif block.settings.subheading_size == 'large' %}1.25rem{% else %}1rem{% endif %};
                  "
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.subheading | escape }}
                </p>
              {%- when 'heading' -%}
                <h2
                  class="video-hero__heading inline-richtext {{ block.settings.heading_size }}"
                  style="
                    color: {{ block.settings.heading_color }};
                    letter-spacing: {{ block.settings.heading_letter_spacing }}px;
                    line-height: {{ block.settings.heading_line_height }};
                    font-weight: {{ block.settings.heading_font_weight }};
                    text-transform: {{ block.settings.heading_text_transform }};
                    margin-bottom: {{ block.settings.heading_margin_bottom }}px;
                    {% if block.settings.heading_text_shadow_enable %}
                    text-shadow: {{ block.settings.heading_shadow_horizontal }}px {{ block.settings.heading_shadow_vertical }}px {{ block.settings.heading_shadow_blur }}px {{ block.settings.heading_shadow_color }};
                    {% endif %}
                  "
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.heading }}
                </h2>
              {%- when 'text' -%}
                <div class="video-hero__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                  {{ block.settings.text }}
                </div>
              {%- when 'button' -%}
                {%- if block.settings.button_label != blank -%}
                  <div class="video-hero__button-wrapper">
                    <a
                      {% if block.settings.button_link == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.button_link }}"
                      {% endif %}
                      class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                      {{ block.shopify_attributes }}
                    >
                      {{ block.settings.button_label | escape }}
                    </a>
                  </div>
                {%- endif -%}
              {%- when 'buttons' -%}
                <div class="video-hero__button-wrapper" {{ block.shopify_attributes }}>
                  {%- if block.settings.button_label_1 != blank -%}
                    <a
                      {% if block.settings.button_link_1 == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.button_link_1 }}"
                      {% endif %}
                      class="button{% if block.settings.button_style_secondary_1 %} button--secondary{% else %} button--primary{% endif %}"
                    >
                      {{ block.settings.button_label_1 | escape }}
                    </a>
                  {%- endif -%}
                  {%- if block.settings.button_label_2 != blank -%}
                    <a
                      {% if block.settings.button_link_2 == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.button_link_2 }}"
                      {% endif %}
                      class="button{% if block.settings.button_style_secondary_2 %} button--secondary{% else %} button--primary{% endif %}"
                    >
                      {{ block.settings.button_label_2 | escape }}
                    </a>
                  {%- endif -%}
                </div>
            {%- endcase -%}
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>

